@model Pitstop.WebApp.ViewModels.MaintenanceHistoryDetailsViewModel
@{
    ViewData["Title"] = "Maintenance History Details";
}

<h3 id="PageTitle">@Model.LicenseNumber -- @Model.MaintenanceDate</h3>

<h4>Description</h4>
<p>@Model.Description</p>

<h4>Type of maintenance</h4>
<p>@Model.MaintenanceType</p>

<h4>Is the maintenance complete?</h4>
<p>@(Model.IsCompleted ? "Yes" : "No")</p>

<h4>Used parts</h4>
@if (Model.UsedParts != null)
{
    <ul>
        @foreach (var usedPart in Model.UsedParts)
        {
            if (usedPart.RepairPart != null)
            {
                <li>@usedPart.RepairPart.Name - quantity used: @usedPart.UsedQuantity - with a warranty period of @usedPart.RepairPart.WarrantyPeriod year@(usedPart.RepairPart.WarrantyPeriod > 1 ? "s" : "")</li>
            }
        }
    </ul>
}
else
{
    <p>No parts used</p>
}